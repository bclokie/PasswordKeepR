<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="/styles/manager.css">
    <title>PasswordKeepR</title>
  </head>
  <body>
    <h1>PasswordKeepR</h1>
    <form action="/manager" method="post">
      <label>ğŸŒ Site Name: </label>
      <input type="text" name="siteName" placeholder="Enter Site Name">
      <br>
      <label>ğŸ”— Site URL: </label>
      <input type="text" name="siteURL" placeholder="Enter Site URL">
      <br>
      <label>ğŸ™‚ Username: </label>
      <input type="text" name="username" placeholder="Enter Username">
      <br>
      <label>ğŸ”‘ Password: </label>
      <input type="text" name="password" placeholder="Enter Password">
      <br>
      <button type="submit">Add Password</button>
    </form>
    <table>
      <tr>
        <th>ID</th>
        <th>Site Name</th>
        <th>Site URL</th>
        <th>Username</th>
        <th>Password</th>
      </tr>
      <% for (let i = 0; i < passwords.length; i++) { %>
        <tr>
          <td><%= passwords[i].id %></td>
          <td><%= passwords[i].site_name %></td>
          <td><%= passwords[i].site_url %></td>
          <td><%= passwords[i].site_username %></td>
          <td><button id="<%= i %>" onclick="togglePasswordVisibility(this)">Show Password</button>
            <span id="password<%= i %>" style="display: none;">
              <%= passwords[i].site_password %>
            </span></td>
        </tr>
      <% } %>
    </table>
    <script>
      function togglePasswordVisibility(element) {
        var passwordId = 'password' + element.id;
        var passwordElement = document.getElementById(passwordId);
        if (passwordElement.style.display === 'none') {
          passwordElement.style.display = 'inline';
          element.innerText = 'Hide Password';
        } else {
          passwordElement.style.display = 'none';
          element.innerText = 'Show Password';
        }
      }
    </script>
  </body>
</html>

